.tempuser-displayname-form
  display: inline

.tempuser-displayname-input
  display: inline-block
  width: 200px
  margin: 0
  padding: 2px

.password-cell
  font-family: monospace
  cursor: pointer

.password-hidden
  color: #999

.pagination
  text-align: center
  margin: 20px 0
  
  a, span
    display: inline-block
    padding: 5px 10px
    margin: 0 2px
    border: 1px solid #ddd
    text-decoration: none
  
  a:hover
    background: #f0f0f0
  
  .current
    background: #0078d7
    color: white
    border-color: #0078d7

.bulk-actions
  margin: 20px 0
  padding: 15px
  background: #f9f9f9
  border-radius: 5px
